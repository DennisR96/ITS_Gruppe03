#include "SPI.h"
#include "ILI9341_t3.h"
#include "font_Arial.h"

//Tesst
#define TFT_DC       9
#define TFT_CS      10
#define TFT_RST    255
#define TFT_MOSI    11
#define TFT_SCLK    13
#define TFT_MISO    12

ILI9341_t3 tft = ILI9341_t3(TFT_CS, TFT_DC, TFT_RST, TFT_MOSI, TFT_SCLK, TFT_MISO);


/**text mittig ausrichten (leider gibt es gettextbounds nicht in der .lib, entweder einfügen, oder text händlisch ausrichten :(, oder Bild...)
void Center (const String &buf, int x, int y) {
  
  int16_t x1, y1;
    uint16_t w, h;
    tft.getTextBounds(buf, x, y, &x1, &y1, &w, &h);
    tft.setCursor(x - w / 2, y);
    tft.print(buf);
  
  }

**/  
void setup() {

 //Layout
 tft.begin();
 tft.fillScreen(ILI9341_BLACK);
 tft.fillRect(0, 0, 60, 320, ILI9341_WHITE);
 tft.drawRect(60, 0, 90, 320, ILI9341_WHITE);
 tft.drawRect(150, 0, 90, 107, ILI9341_WHITE);
 tft.drawRect(150, 106, 90, 107, ILI9341_WHITE);
 tft.drawRect(150, 212, 90, 108, ILI9341_WHITE);


//Text
 tft.setRotation(3);
tft.setCursor(108, 12);
tft.setTextColor(ILI9341_BLACK);
//void setTextColor(ILI9341_BLACK, ILI9341_GREEN);
tft.setTextSize(3);  

tft.print("EFFEKT");

}

